.silderBox{
  width: 640rpx;
  margin:auto;
  overflow: hidden;
}
.silderBox .silderbgImg{
  display: none;
  width:630rpx;
  height:316rpx;
  margin:auto;
}
.silderBox .silder_ceng{
  width:630rpx;
  height:316rpx;
  overflow: hidden;
  margin:auto;
  position:relative;
}
.silderBox .exm{
  width: 100%;
  height: 62rpx;
  display: flex;
  justify-content:space-between;
  color:#b1bfcd;
  margin-top:10rpx;
}
.silderBox .exm .i-icon{
  margin-right:10rpx;
}
.silderBox .exm .error{
  color:#ed726a;
}
.silderBox .exm .right{
  color:#2ca8aa;
}
.silderBox .exm .icon-close{
 font-size: 33rpx;
}
canvas {
  position: absolute;
  right: 0;
  top:6rpx;
  width:100%;
  height:100%;
  z-index:9;
}
.silder_drag{
  width: 630rpx;
  height: 74rpx;
  border-radius: 37rpx;
  border:1px solid #ccc;
  margin:20rpx auto;
  position: relative;
  text-align: center;
  color: b1bfcd;
  line-height: 72rpx;
  box-sizing: border-box;
  
}
.silder_drag .moved{
  height: 72rpx;
  border-top-left-radius: 36rpx;
  border-bottom-left-radius: 36rpx;
  position: absolute;
  top:0;
  left:0;
  background: #25d0c7;
}
.silder_drag .silder_drag_btn{
  height:90rpx;
  width: 90rpx;
  border-radius: 50%;
  line-height: 90rpx;
  background:linear-gradient(150deg,#fff,#d7d7d7);
  position: absolute;
  border:1px solid #b1aca9;
  top:-12rpx;
  left:0;
  color:#2faab1;
  font-weight: bold;
  box-shadow: 1rpx 2rpx 6rpx #c8c3bf;
}
.yan_drag_text{
  color:#b1bfcd;
}