/* components/report/report.wxss */
.report-modal {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 100;
}
.report-mask {
  position: absolute;
  width: 100%;
  height: 100vh;
  background-color: rgba(0,0,0,.7);
  z-index: 101;
}
.report-container {
  position: absolute;
  top: 100rpx;
  left: 89rpx;
  width: 580rpx;
  height: 882rpx;
  z-index: 10200;
}
.canvas_box,.canvas_cover {
  width: 580rpx;
  height: 534rpx;
  /* background-color: red; */
}
.report_panel {
  width: 580rpx;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  padding-top: 30rpx;
  margin-top: -10rpx;
  overflow: hidden;
}
.report_row {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color:rgba(60,74,85,1);
}
.report_row .row_line {
  position: absolute;
  top: 14rpx;
  width: 179rpx;
  height:1rpx;
  background: rgba(221,228,235,1)
}
.report_row .line_left {
  left: 0;
}
.report_row .line_right {
  right: 0;
}
.share_option {
  display: flex;
  width: 265rpx;
  height: 103rpx;
  margin: 20rpx auto 34rpx; 
  font-size: 22rpx;
  color:#3C4A55;
  justify-content: space-between;
}
.share_option image {
  width: 70rpx;
  height: 70rpx;
}
.close-report {
  position: absolute;
  font-size: 80rpx !important;
  color: #ffffff;
  bottom: -18rpx;
  left: 258rpx;
}

.replace-btn{
  width: 70rpx;
  height: 103rpx;
  line-height: 26rpx;
  font-size: 22rpx;
  color:rgba(177,191,205,1);
  border: none;
  padding:0;
  margin: 0;
}
.replace-btn::after{
  border:none;
}

.footer_box {
  width: 100%;
  position: absolute;
  bottom: -50rpx;
  text-align: center;
  height: 15vh;
  z-index: 103;
  color: #ffffff;
}

.footer_box .link{
  color: #24d0c6;
  line-height: 5vh;
}