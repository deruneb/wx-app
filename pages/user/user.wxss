.mt20{
  margin-top:20rpx
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin: 20px auto;
  text-align: center;
}
.text-color{
  color: #b1bfcd;
}
.company-out-box {
  padding: 45rpx 25rpx 45rpx 35rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.com-li-bottom {
  width: 100%;
  margin: 15rpx 0 25rpx;
  border: 1rpx solid #DDE4EB;
}
.li-bot-top {
  width: 100%;
  height: 60rpx;
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  background:rgba(247,247,255,1);
  border-right: 1rpx solid #DDE4EB;
  box-sizing: border-box;
}
.li-bot-textarea {
  margin-bottom: 25rpx;
}
.li-bot-input {
  width: 100%;
  padding: 24rpx 25rpx;
  font-size: 24rpx;
  color: #3C4A55;
  line-height: 40rpx;
  min-height: 203rpx;
  box-sizing: border-box;
}
.add-module {
  width: 670rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #3C4A55;
  background:rgba(247,247,255,1);
  border:1px solid rgba(221,228,235,1);
}