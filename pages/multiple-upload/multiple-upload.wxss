/* pages/multiple-upload/multiple-upload.wxss */
.company-out-box {
  padding: 45rpx 25rpx 45rpx 35rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.com-li-box {
  width: 670rpx;
}
.com-li-top {
  width: 100%;
  height: 62rpx;
  display: flex;
  align-items: center;
}
.com-li-input {
  width: 455rpx;
  height: 62rpx;
  font-size: 26rpx;
  text-align: left;
  line-height: 62rpx;
  padding: 0 15rpx;
  color: #3C4A55;
  background: #FFFFFF;
  border:1rpx solid rgba(221,228,235,1);
  outline: none;
  box-sizing: border-box;
}
.com-li-remove {
  width: 38rpx;
  height: 43.88rpx;
  margin-left: 26rpx;
  margin-right: 30rpx;
}
.com-li-turn {
  width: 44.19rpx;
  height: 44.16rpx;
  margin-right: 28rpx;
}
.com-li-bottom {
  width: 100%;
  margin: 15rpx 0 25rpx;
  border: 1rpx solid #DDE4EB;
}
.li-bot-top {
  width: 100%;
  height: 60rpx;
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  background:rgba(247,247,255,1);
  border-right: 1rpx solid #DDE4EB;
  box-sizing: border-box;
}
.li-bot-top-img {
  width: 38.75rpx;
  height: 30.63rpx;
}
.li-bot-textarea {
  margin-bottom: 25rpx;
}
.li-bot-input {
  width: 100%;
  padding: 24rpx 25rpx;
  font-size: 24rpx;
  color: #3C4A55;
  line-height: 40rpx;
  min-height: 203rpx;
  box-sizing: border-box;
}
.li-bot-imgs {
  width: 100%;
  padding: 0 32rpx 35rpx;
  box-sizing: border-box;
}
.li-img-box {
  width: 605rpx;
  /* height: 315rpx; */
  margin: 0 auto;
  text-align: center;
  position: relative;
}
.li-img-box + .li-img-box {
  margin-top: 10rpx;
}
.li-bot-img {
  width: 605rpx;
  /* height: 315rpx; */
  vertical-align: middle;
  margin: 0 auto;
}
.li-bot-img + .li-bot-img {
  margin-top: 10rpx;
}
.li-img-mask {
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  color: #ffffff;
  background:rgba(0,0,0,0.3);
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picset {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-module {
  width: 670rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #3C4A55;
  background:rgba(247,247,255,1);
  border:1px solid rgba(221,228,235,1);
}