/* pages/cat/cat.wxss */
.areaw-outwrap{
  width: 100%;
  padding: 16rpx 0;
  background: #F2ECE7;
  margin-bottom: 8rpx;
}
.areaw-outwrap .areawrap-innerwrap{
  display: flex;
  flex-direction: column;
}
.areaw-outwrap .areawrap-innerwrap .area{
  width: 690rpx;
  height: 335rpx;
  margin: 8rpx auto 10rpx;
  overflow: hidden;
  position: relative;
  border-radius: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
}

.areaw-outwrap .areawrap-innerwrap .area .textwrap{
  width: 100%;
  position: absolute;
  bottom:0;
  left: 0;
  background:linear-gradient(to top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0)); 
}
.areaw-outwrap .areawrap-innerwrap .area .textwrap label{
  display: inline-block;
  margin: 0.6em 0 0.4em 0.4em;
  font-size:0.8em;
  color:#fff;
}
.areaw-outwrap .areawrap-innerwrap .area image{
  width: 100%;
  height: 335rpx;
}