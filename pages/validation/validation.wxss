.member_main {
  width: 96%;
  margin: 30rpx 20rpx;
  border-bottom: 1px solid #dcdcde;
}

.member_main input {
  background: none;
  border: none;
  padding: 15px 0;
  outline: none;
  width: 95%;
  font-size: 30rpx;
}

.phcolor {
  color: #d1d1d1;
}

.input_center {
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
}

.input_center view {
  display: inline-block;
}

.input_center .center_left {
  width: 45%;
}

.input_center .capture {
  width: 35%;
  height: 100%;
  position: relative;
}

.input_center .changeImg {
  width: 20%;
  padding: 20rpx;
  color: #4b5987;
  font-size: 30rpx;
}

.btn {
  width: 90%;
  margin: 0 auto;
  padding: 0;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.btn button {
  width: 100%;
  background: #485a8b;
  border: none;
  text-align: center;
  color: #fff;
  outline: none;
  font-size: 40rpx;
}

canvas {
  width: 300rpx;
  height: 80rpx;
}