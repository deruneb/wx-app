/* pages/image-cropper-demo/image-cropper-demo.wxss */
page{
  background:rgb(14, 13, 13);
}
view{
  font-size: 30rpx;
}
.top{
  position: absolute;
  width:100%;
  top:10rpx;
  display: flex;
  flex-flow:wrap;
  z-index: 10;
  color:white;
  justify-content:space-around;
}
.hint{
  position: absolute;
  top:10rpx;
  width:100%;
  display: flex;
  justify-content: space-between;
  font-size: 33rpx;
  text-align: center;
  color:white;
  z-index: 10;
}

.bottom{
  position: absolute;
  width:100%;
  bottom:50rpx;
  font-size: 30rpx;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
  flex-wrap:wrap;
  
  height: 210rpx;
}
button{
  width: 86rpx!important;
  line-height: 32rpx!important;
  padding: 0!important;
  background-color: transparent!important;
  color: #fff!important;
  font-size:27rpx!important;
  z-index:2;
  height:60rpx;
  min-width:70rpx;
  margin:0 4rpx;
}
.input{
  display: flex;
  height: 50rpx;
  width:50%;
}
.input>.label{
  min-width:150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.input>input{
  margin-left:10rpx;
  text-align: center;
  max-width:160rpx;
  border:1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}