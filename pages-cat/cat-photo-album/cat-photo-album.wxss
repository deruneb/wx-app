.strategy-item{
  width: 700rpx;
  height: 400rpx;
  margin: 20rpx auto 0;
  position: relative;
}
.strategy-item .item-img{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  box-shadow: 1rpx 0 16rpx 4rpx #dedede;
  margin-bottom: 10rpx;
}
.strategy-item .item-text{
  display: inline-block;
  width: 600rpx;
  height: 50rpx;
  font-weight: bold;
  font-size: 40rpx;
  /* color: #20CAB4; */
  color: #fff;
  text-shadow:5px 1px 6px #000;
  position: absolute;
  left: 0;
  right: 0;
  top: -83rpx;
  bottom: 0;
  margin: auto;
  font-family: Georgia, 'Times New Roman', Times, serif;
}
