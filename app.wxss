/**app.wxss**/
page {
  min-height: 100vh;
  background-color: rgba(36, 170, 125, .4);
  color: #63717b;
  font-size: 32rpx;
  line-height: 1.6;
  font-family: -apple-system-font, Helvetica Neue, sans-serif;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}

/* flex */

.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.flex-column{
  flex-direction: column;
}

.justify-content-between {
  justify-content: space-between;
}

.justify-content-around {
  justify-content: space-around;
}

.justify-center {
  justify-content: center;
}

.align-items-center {
  align-items: center;
}

/* 字体 */
.font-35{
  font-size: 35rpx!important;
}
.font-28{
  font-size: 28rpx;
}
.font-24{
  font-size: 24rpx;
}
.bold{
  font-weight: bold;
}
.color-gray{
  color: #B1BFCD;
}
/* 按钮效果 hover-class*/
.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}

.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}

.tips{
  width: 750rpx;
  font-size: 12rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  bottom: 0;
}

.place-text{
  height:90rpx;
  font-size: 22rpx;
  line-height: 90rpx;
  text-align: center;
  background-color:#fff;
  border-bottom:1rpx solid #F7F7FF;
  padding:30rpx 39rpx 30rpx 30rpx;
}