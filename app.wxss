/**app.wxss**/
page {
  min-height: 100vh;
  background-color: #fff;
  color: #63717b;
  font-size: 32rpx;
  line-height: 1.6;
  font-family: -apple-system-font, Helvetica Neue, sans-serif;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* flex */

.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.flex-column{
  flex-direction: column;
}

.justify-content-between {
  justify-content: space-between;
}

.justify-content-around {
  justify-content: space-around;
}

.justify-center {
  justify-content: center;
}

.align-items-center {
  align-items: center;
}

.flex-wrap{
  flex-wrap: wrap;
}

/* 字体 */
.title{
  font-size: 34rpx;
  color: #182b39;
  font-weight: bold;
  margin: 15rpx 0 20rpx;
}
.content{
  font-size: 25rpx;
  color: #3c4a55;
}
.font-35{
  font-size: 35rpx!important;
}
.font-28{
  font-size: 28rpx;
}
.font-24{
  font-size: 24rpx;
}
.font-22{
  font-size: 22rpx;
}
.bold{
  font-weight: bold;
}
.text-indent{
  text-indent: 18rpx;
  color: #999;
}
.color-gray{
  color: #B1BFCD;
}

.color-black{
  color: #3a4c55;
}
/* 按钮效果 hover-class*/
.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}

.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}

.btn-defult{
  width: 730rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #3c4a55;
  font-size: 28rpx;
  border: 1rpx solid #f1f2fc;
  margin: 20rpx auto;
  border-radius: 10rpx; 
}

.tips{
  width: 750rpx;
  font-size: 12rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  bottom: 0;
}

.place-text{
  height:90rpx;
  font-size: 22rpx;
  line-height: 90rpx;
  text-align: center;
  background-color:#fff;
  border-bottom:1rpx solid #F7F7FF;
  padding:30rpx 39rpx 30rpx 30rpx;
}

/* 菜单按钮 */
.operation-btn{
  width: 720rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 10rpx;
}
.operation-btn text{
  display: inline-block;
  width: 33%;
  text-align: center;
  font-size: 29rpx;
}
.operation-btn text:nth-of-type(2){
  border-left: 1rpx solid rgba(36, 170, 125, .4);
  border-right: 1rpx solid rgba(36, 170, 125, .4);
}

/* 超出省略 */
.line-clamp2{
  max-height: 64rpx;
  line-height:32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  position: relative;
  word-break: keep-all;
  word-wrap: break-word;
}

/* 上传图片样式 */
.upload-img{
  width: 200rpx;
  height: 200rpx;
  background-color: #F7F7F7;
  text-align: center;
  line-height: 200rpx;
}

/* 通用提交按钮样式 */
.submit-btn{
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #27C6B3;
  border-radius: 10rpx;
  margin: 250rpx auto 0;
}

/* 识别 */
/* pages/plant-identification/index.wxss */
.description{
  font-size: 18rpx;
  color: #7D7E80;
  text-indent: 22rpx;
}
.plant-add-img{
  width: 600rpx;
  height: 300rpx;
  text-align: center;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.plant-add-img .placeholder-img{
  width: 100rpx;
  height: 100rpx;
}
.plant-add-img .plant-img{
  width: 600rpx;
  height: 300rpx;
}
.updata-btn{
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 22rpx;
  color: #395072;
  border: 1rpx solid #395072;
  border-radius: 30rpx;
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.updata-btn-hover{
  border: 1rpx solid #395072;
}

/* 点击弹出 */
.add-img{
  position: fixed;
  bottom: 150rpx;
  transition: right .7s;
  width: 62rpx;
  background-color: #fff;
  border: 1rpx solid #7D95C1;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;

  display: flex;
  padding: 10rpx 40rpx;
  
}

